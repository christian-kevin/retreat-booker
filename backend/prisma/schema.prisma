generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue {
  id              String            @id @default(uuid())
  name            String
  city            String
  country         String
  address         String
  capacity        Int
  pricePerNight   Int               @map("price_per_night")
  description     String
  amenities       String[]
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  bookingInquiries BookingInquiry[]

  @@index([city])
  @@index([capacity])
  @@index([pricePerNight])
  @@map("venue")
}

model BookingInquiry {
  id            String   @id @default(uuid())
  venueId      String   @map("venue_id")
  venue        Venue    @relation(fields: [venueId], references: [id])
  companyName  String   @map("company_name")
  email        String
  startDate    DateTime @map("start_date")
  endDate      DateTime @map("end_date")
  attendeeCount Int     @map("attendee_count")
  version      Int      @default(0)
  createdAt    DateTime @default(now()) @map("created_at")

  @@index([venueId])
  @@index([email])
  @@index([venueId, startDate, endDate])
  @@map("booking_inquiry")
}

